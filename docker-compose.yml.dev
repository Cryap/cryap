version: '3.1'

services:
  redis:
    image: redis:7.0.12-alpine
    restart: unless-stopped
    ports:
      - 6379:6379
    volumes: 
      - /nix/persist/dev/cryap/redis:/data
  db:
    image: postgres
    restart: always
    environment:
      POSTGRES_PASSWORD: example
    ports:
      - 5432:5432
    volumes:
      - /nix/persist/dev/cryap/db:/var/lib/postgresql/data
